	keywords = {Airborne laser scanning, ground filtering algorithms, Mediterranean forest, open-source software},
	pages = {4072--4085},
}

@article{aguilar_modelling_2010,
	title = {Modelling vertical error in {LiDAR}-derived digital elevation models},
