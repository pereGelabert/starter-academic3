	journal = {PLoS ONE},
	author = {Badalamenti, Emilio and Battipaglia, Giovanna and Gristina, Luciano and Novara, Agata and Ruhl, Juliane and Sala, Giovanna and Sapienza, Luca and Valentini, Riccardo and La Mantia, Tommaso},
