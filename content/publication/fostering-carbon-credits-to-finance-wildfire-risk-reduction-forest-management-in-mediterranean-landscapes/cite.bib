	journal = {Journal of Ecology},
	author = {Batllori, Enric and Gutiérrez, Emilia},
	year = {2008},
	keywords = {Pyrenees, Global change, Demographic structure, Dendroecology, Pinus uncinata, Recruitment, Step-like transition, Tree line},
