	year = {2012},
	keywords = {Ecological models, Geographic information Technologies, Mediterranean ecosystems, Vulnerability to fire},
	pages = {1012--1026},
	file = {Attachment:C\:\\Users\\pjgel\\Zotero\\storage\\2UKSV3JV\\Duguy et al. - 2012 - Modelling the ecological vulnerability to forest fires in mediterranean ecosystems using geographic information te.pdf:application/pdf},
