	keywords = {Pyrenees, Canopy cover, densification, encroachment, global warming, image reclassification, land-use changes, mountain pine},
	pages = {632--641},
	file = {Full Text PDF:C\:\\Users\\pjgel\\Zotero\\storage\\8DC9GUQX\\Améztegui et al. - 2010 - Land-use changes as major drivers of mountain pine.pdf:application/pdf;Snapshot:C\:\\Users\\pjgel\\Zotero\\storage\\CYHH6L4N\\j.1466-8238.2010.00550.html:text/html},
